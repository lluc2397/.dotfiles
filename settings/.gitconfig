[user]
	name = Lucas
	email = lluc23@hotmail.com
	username = lucas-montes

[init]
	defaultBranch = master

[core]
	editor = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	hooksPath = git-hooks

[color]
	ui = auto

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
    whitespace = red reverse

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[github]
	user = lucas-montes

[fetch]
    prune = true

[mergetool "fugitive"]
	cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"

[merge]
	tool = fugitive

[pull]
	rebase = true
